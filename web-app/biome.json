{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"all": true,
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/*", "build/*"]
	}
}
